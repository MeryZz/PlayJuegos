<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/juegoFavText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige una opciÃ³n: "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <RadioGroup
        android:id="@+id/radioGroupGames"
        android:layout_width="231dp"
        android:layout_height="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juegoFavText"
        app:layout_constraintVertical_bias="0.061">

        <RadioButton
            android:id="@+id/radioButtonAB"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Angry Birds"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonDf"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Dragon fly"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonHcr"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Hill climbing racing"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonRd"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Radiant defense"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonPs"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pocket soccer"
            android:textSize="18sp" />
    </RadioGroup>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="336dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupGames"
        app:layout_constraintVertical_bias="0.241"
        android:numStars="7"
        android:rating="0"
        android:stepSize="1"
        android:max="10"/>

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="347dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.145"
        android:progress="0"
        android:max="10" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2"
        app:layout_constraintVertical_bias="0.568"
        app:srcCompat="?android:attr/textCheckMark" />

</androidx.constraintlayout.widget.ConstraintLayout>